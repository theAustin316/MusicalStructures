<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_ht"
    android:minHeight="@dimen/list_ht">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_ht"
        android:layout_height="@dimen/list_ht"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_ht"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/image"
        android:paddingStart="@dimen/list_pad">

        <TextView
            android:id="@+id/music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_layht"
            android:gravity="bottom"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/blugre"
            android:textStyle="bold"
            tools:text="@string/song1" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_layht"
            android:layout_below="@id/music"
            android:fontFamily="sans-serif-condensed"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/blugre"
            tools:text="@string/sing7" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/prog_margin"
            android:layout_height="@dimen/prog_margin"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/list_pad"
            android:src="@drawable/play_icon" />

    </RelativeLayout>
</RelativeLayout>
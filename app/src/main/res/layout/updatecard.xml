<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blugre"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_ht"
        android:background="@color/backish">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/trending" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/trend_margin"
            android:text="@string/trend"
            android:textColor="@color/blugre"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/trending" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/height"
        android:layout_height="@dimen/view_height"
        android:background="@color/blugre" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/card_rad"
        android:layout_marginLeft="@dimen/card_rad"
        android:layout_marginRight="@dimen/card_rad"
        android:layout_marginTop="@dimen/view_height"
        android:background="@drawable/rect"
        android:columnWidth="@dimen/col_width"
        android:gravity="center"
        android:horizontalSpacing="@dimen/hori_spac"
        android:numColumns="auto_fit"
        android:padding="@dimen/prog_margin"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/mg_left" />
</LinearLayout>